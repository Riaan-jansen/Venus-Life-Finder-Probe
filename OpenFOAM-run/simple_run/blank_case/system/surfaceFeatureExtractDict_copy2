FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       dictionary;
    location    "system";
    object      surfaceFeatureExtractDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
surfaceFeaturesDict
{
    extractionMethod    extractFromSurface;
    // Input geometry (must exist in constant/triSurface)
    input       "blade.stl";

    // Output edge mesh (will write to constant/triSurface)
    output      "blade.eMesh";

    // Edge extraction settings
    angle       150;    // [degrees] min angle to consider an edge “sharp”
    writeObj    no;     // also dump .obj for visualisation (yes/no)

    // Optional extra settings
    // IncludedAngle: alternative name for "angle"

    // subsetFeatures: true;  // only keep features, discard whole surface
    surfaces
    (
        blade.stl;
    )
}
// ********************************************************
